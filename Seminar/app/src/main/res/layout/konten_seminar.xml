<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/teal">

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Nama Seminar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text=": "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtnamaseminar"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Seminar Teknologi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Tanggal Seminar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text=": "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txttgl"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="03/07/2020"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Pemateri"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text=": "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtpemateri"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Riza Muhida pdh"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:id="@+id/btnDetail"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/kotakhitam"
                    android:text="Detail"/>
                <Button
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btnUbah"
                    android:background="@drawable/kotakhitam"
                    android:text="Ubah"/>
                <Button
                    android:layout_width="90dp"
                    android:id="@+id/btnHapus"
                    android:layout_height="35dp"
                    android:background="@drawable/kotakhitam"
                    android:text="Hapus"/>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
</LinearLayout>